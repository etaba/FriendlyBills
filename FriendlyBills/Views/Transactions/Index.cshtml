@model IEnumerable<FriendlyBills.Models.TransactionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if(Model.Count() > 0)
{
    <table class="table">
    <tr>
        <th>
            Amount
        </th>
        <th>
            Description
        </th>
        <th>
            Entered By
        </th>
        <th>
            Date
        </th>
        <th>
            Select
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.MonetaryAmount
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.Submitter
        </td>
        <td>
            @item.EntryTimestamp
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
}