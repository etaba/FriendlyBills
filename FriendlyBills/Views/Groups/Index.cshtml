@model List<FriendlyBills.Models.GroupViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(Model.Count() > 0)
{
        foreach (var item in Model)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.Name)
                        , Net Value: @item.MemberBalances.Values.Sum()
                    </th>
                </tr>
                <tr>
                    @foreach (var userBalance in item.MemberBalances)
                    {
                        <td>
                            @userBalance.Key
                        </td>
                    }
                </tr>
                <tr>
                    @foreach (var userBalance in item.MemberBalances)
                    {
                        <td>
                            @userBalance.Value
                        </td>
                    }
                </tr>
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>
            </table>
        }
}
else
{
    <div>
        You have no groups yet!
    </div>
}
@Html.ActionLink("Create New Group", "Create")
@Html.ActionLink("Join Existing Group", "Join")


